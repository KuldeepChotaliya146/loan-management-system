<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-semibold mb-4">New Loan</h1>
  
  <%= form_with(model: @loan, method: "post", class: "max-w-md", data: { turbo: false }) do |form| %>
    <div class="mb-4">
      <%= form.label :reason, class: "block text-gray-700 font-bold mb-2" %>
      <%= form.text_area :reason, class: "form-input w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div class="mb-4">
      <%= form.label :amount, class: "block text-gray-700 font-bold mb-2" %>
      <%= form.number_field :amount, class: "form-input w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div class="mb-4">
      <%= form.label :interest_rate, class: "block text-gray-700 font-bold mb-2" %>
      <%= form.number_field :interest_rate, class: "form-input w-full rounded-md border-gray-300 shadow-sm", disabled: true %>
      <p class="text-gray-500 text-sm">Note: Interest rate can be changed by admin.</p>
    </div>

    <div class="mb-4">
      <%= form.submit "Create Loan", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Back", loans_path, class: "bg-yellow-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>