<div class="container mx-auto flex flex-col justify-center h-screen">
  <div class="w-full max-w-md mx-auto">
    <h1 class="text-2xl font-bold mb-4">Approve Loan</h1>

    <%= form_tag(admin_request_loan_path(@loan), method: :post, class: "loan-approval-form") do %>
      <div class="mb-4">
        <%= label_tag "interest_rate", "Interest Rate:", class: "block text-sm font-medium text-gray-700" %>
        <%= text_field_tag "interest_rate", @loan.interest_rate, class: "form-input mt-1 block w-full rounded-md shadow-sm border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      </div>
      <%= hidden_field_tag :status, 'approved' %>
      <%= submit_tag 'Approve', class: 'px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:outline-none focus:bg-blue-600' %>
      <%= link_to 'Back', dashboard_path, class: 'px-4 py-2 bg-yello-500 text-white rounded-md hover:bg-yellow-600 focus:outline-none focus:bg-blue-600' %>
    <% end %>
  </div>
</div>
